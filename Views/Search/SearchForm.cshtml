                                                <button name="btn-search-form" value="6" class="btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#modal" data-content="6">ГИП</button>
                                            </div>
                                            <input id="6" type="text" class="form-control" placeholder="" name="Gip" aria-describedby="basic-addon1">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <button name="btn-search-form" value="7" class="btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#modal" data-content="7">Глав. спец.</button>
