                                            <input id="10" type="text" class="form-control" placeholder="" name="Otdel" aria-describedby="basic-addon1">
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <button name="btn-search-form" value="11" class="btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#modal" data-content="11">Наим.компании:</button>
                                            </div>
                                            <input id="11" type="text" class="form-control" placeholder="" name="organization" aria-describedby="basic-addon1">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
