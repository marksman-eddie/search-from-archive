            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="inputDate">Нач. дата учета :</label>
                        <input value="@(new DateTime(DateTime.Now.Year,1,1).ToString("yyyy-MM-dd") )" type="date" name="Date1" class="form-control">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="inputDate">Кон. дата учета :</label>
                        <input value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date" name="Date2" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-element" style="margin-top: 20px;">
            <button id="btn-search" class="btn btn-primary" data-toggle="popover" data-container="body" data-trigger="focus" data-placement="bottom" data-content="Выберите более конкретизированные параметры поиска" type="submit">Найти</button>
            <input id="btn-delete" class="btn btn-primary" type="reset" value="Сброс">
        </div>
    </div>    
    <div id="modal" role="dialog" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            
            <div class="modal-content">
                
                <div class="modal-header">
                    <h5 id="modalName" class="modal-title"></h5>
                    <button type="button" class="btn-close forHide" data-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div id="modal-body" class="modal-body">
                    <div class="loading">
                        <div  class="d-flex justify-content-center">
                            <div class="spinner-border" role="status">
                            </div>
                        </div>
                    </div>
                    <div class="form-group forHide hidden">
                        <label for="exampleFormControlSelect1">Выберите значения из списка(выбор нескольких с помощью клавиши "Ctrl"):</label>
                        <select multiple class="form-control" id="exampleFormControlSelect1">
                        </select>
                    </div>
                    <div class="form-group2 forHide hidden">
                        <label for="exampleFormControlSelect2">Выбранные значения:</label>
                        <select multiple class="form-control" id="exampleFormControlSelect2">
                        </select>
                    </div>
                </div>
                <div class="modal-footer forHide hidden">
                    <button type="button" class="btn btn-secondary" onclick="clearOutput()">Сбросить</button>
                    <button type="button" class="btn btn-primary" onclick="addInModal()">Добавить</button>
                    <button type="button" class="btn btn-primary" onclick="addToInput()">Выбрать</button>
                </div>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/js/site.js")" type="text/javascript"></script>
